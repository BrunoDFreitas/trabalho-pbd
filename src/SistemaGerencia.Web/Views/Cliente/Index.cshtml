@model List<SistemaGerencia.Web.Models.ClienteViewModel>  

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <h2>Clientes</h2>
    
    <p>@ViewBag.Erro</p>

    <p>
        <div class="row">
            <div class="col-md-2">
                @Html.ActionLink("Adicionar Cliente", "CadastroCliente", "Cliente", null, new { @class = "btn btn-primary" })
            </div>

            <div class="col-md-2">
                @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </p>

    <table id="tableClientes" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>CPF/CNPJ</th>
                <th>Nome</th>
                <th>Ramo</th>
                <th>Cadastro do Cliente</th>
                <th>Orçamentos</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Count > 0)
            {
                foreach(var c in Model)
                {
                    <tr>
                        <td>@c.CPFCNPJ</td>
                        <td>@c.Nome</td>
                        <td>@c.Ramo</td>
                        <td>@Html.ActionLink("Editar", "CadastroCliente", "Cliente", new { id = c.Id }, null)</td>
                        <td>@Html.ActionLink("Consultar", "SolicitacoesCliente", "Orcamento", new { id = c.Id }, null)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

