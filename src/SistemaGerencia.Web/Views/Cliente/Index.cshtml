@model List<SistemaGerencia.Web.Models.ClienteViewModel>  

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <h2>Clientes</h2>
    
    <p>@ViewBag.Erro</p>

    <p> <a class="btn btn-default" href="/Cliente/CadastroCliente">Adicionar</a></p>

    <table id="tableClientes" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>CPF/CNPJ</th>
                <th>Nome</th>
                <th>Ramo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Count > 0)
            {
                foreach(var c in Model)
                {
                    <tr>
                        <td>@c.CPFCNPJ</td>
                        <td>@c.Nome</td>
                        <td>@c.Ramo</td>
                        <td>@Html.ActionLink("Detalhes", "CadastroCliente", "Cliente", new { id = c.Id }, null)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

