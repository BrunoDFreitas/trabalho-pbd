@model SistemaGerencia.Web.Models.ClienteViewModel
@{
    ViewBag.Title = "CadastroCliente";
}

<div class="container">
    <h2>Cadastro de Cliente</h2>

    <p>@ViewBag.Erro</p>

    <form action="/Cliente/GravarCliente" method="post">
        <input type="text" hidden value="@Model.Id" id="id" name="id"/>
        <div class="row">
            <div class="col-md-1">
                <label>CPF/CNPJ</label>
            </div>
            <div class="col-md-1">
                @Html.TextBox("cpfcnpj", Model.CPFCNPJ)
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <label>Nome</label>
            </div>
            <div class="col-md-1">
                @Html.TextBox("nome", Model.Nome)
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <label>Ramo</label>
            </div>
            <div class="col-md-1">
                @Html.TextBox("ramo", Model.Ramo)
            </div>
        </div>
        <div class="row">
            <input type="submit" class="btn btn-primary" value="Gravar" />
        </div>
    </form>
</div>


