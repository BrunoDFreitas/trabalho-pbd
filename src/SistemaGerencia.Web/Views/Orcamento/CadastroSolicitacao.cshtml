@model SistemaGerencia.Web.Models.CadastroSolicitacaoOrcamentoViewModel

@{
    ViewBag.Title = "CadastroSolicitacao";
}

<div class="container">
    <h2>Cadastro de Solicitação para o Cliente @Model.NomePessoa</h2>

    <form action="~/Orcamento/GravarSolicitacao" method="post">
        <input type="text" hidden value="@Model.IdPessoa" id="idpessoa" name="idpessoa" />
        <div class="row">
            <div class="col-md-2">
                <label>Descrição</label>
            </div>
            <div class="col-md-3">
                @Html.TextBox("descricao", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Data da Solicitação</label>
            </div>
            <div class="col-md-3">
                @Html.TextBox("data", DateTime.Now.Date.ToString("dd/MM/yyyy"), new { @class = "form-control datepicker", @readonly = "readonly" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Hora da Solicitação</label>
            </div>
            <div class="col-md-3">
                @Html.TextBox("hora", DateTime.Now.Hour.ToString("00") + ":" + DateTime.Now.Minute.ToString("00") + ":" + DateTime.Now.Second.ToString("00"), new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="row">
                <div class="col-md-2">
                    <label>Endereço</label>
                </div>
                <div class="col-md-3">
                    @Html.DropDownList("idEndereco", new SelectList(Model.Enderecos, "IdEndereco", "Descricao"), new { @class = "form-control" })
                </div>
        </div>
        <div class="row">
            <div class="col-md-1">
                <input type="submit" class="btn btn-primary" value="Gravar" />
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Voltar", "SolicitacoesCliente", "Orcamento", new { @id = Model.IdPessoa }, new { @class = "btn btn-default" })
            </div>
        </div>
    </form>
</div>