@model SistemaGerencia.Web.Models.ListagemSolicitacoesOrcamentoViewModel
@{
    ViewBag.Title = "SolicitacoesCliente";
}

<div class="container">
    <h2>Solicitações do Cliente @Model.NomeCliente</h2>

    
    <p>
        <div class="row">
            <div class="col-md-2">
                @Html.ActionLink("Adicionar Solicitação", "CadastroSolicitacao", "Orcamento", new { @id = Model.IdPessoa }, new { @class = "btn btn-primary" })
            </div>

            <div class="col-md-2">
                @Html.ActionLink("Voltar", "Index", "Cliente", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </p>

    <table id="tableClientes" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Descrição do Orçamento</th>
                <th>Data/Hora da Solicitação</th>
                <th>Status</th>
                <th>Descrição do Endereço</th>
                <th>Endereço</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Solicitacoes != null && Model.Solicitacoes.Count > 0)
            {
                foreach (var s in Model.Solicitacoes)
                {
                    <tr>
                        <td>@s.DescricaoSolicitacao</td>
                        <td>@s.DataHoraSolicitacao</td>
                        <td>@s.Status</td>
                        <td>@s.Endereco.Descricao</td>
                        <td>@s.Endereco.UF, @s.Endereco.Cidade, @s.Endereco.Bairro, @s.Endereco.Rua, @s.Endereco.Numero</td>
                        <td>@Html.ActionLink("Detalhes", "DetalheSolicitacao", "Orcamento", new { id = s.IdSolicitacao }, null)</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>

